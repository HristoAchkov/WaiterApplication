@model AddDishToOrderViewModel

@{
    ViewBag.Title = "Add Dish to Order";
}

<h2>Add Dish to Order</h2>
<hr />

<div class="dish-item">
    <img src="@Model.Image" alt="@Model.Name" class="dish-image" />
    <h3>@Model.Name</h3>
    <p>Price: @Model.Price</p>
    <form method="post" action="@Url.Action("AddToOrder", "Order")">
        <input type="hidden" name="dishId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Add to Order</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}